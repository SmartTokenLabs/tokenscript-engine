<ts:token xmlns:ethereum="urn:ethereum:constantinople" xmlns:ts="http://tokenscript.org/2024/01/tokenscript" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" name="TolkienScript" xsi:schemaLocation="http://tokenscript.org/2024/01/tokenscript https://www.tokenscript.org/schemas/2024-01/tokenscript.xsd">
    <ts:label>
        <ts:plurals xml:lang="en">
            <ts:string quantity="one">
                Tolkienscript Token
            </ts:string>
            <ts:string quantity="other">
                Tolkienscript Tokens
            </ts:string>
        </ts:plurals>
    </ts:label>
    <ts:meta>
        <ts:description xml:lang="en">
        </ts:description>
        <ts:aboutUrl xml:lang="en">
        </ts:aboutUrl>
        <ts:iconUrl xml:lang="en">
           https://www.goodfreephotos.com/albums/other-photos/lord-of-the-rings-the-one-ring.jpg
        </ts:iconUrl>
    </ts:meta>
    <ts:contract interface="erc721" name="ThisToken">
        <ts:address network="17000">0x8D975a1404603314886B7Ca9d3fC711B5eEf23A8</ts:address>
    </ts:contract>
    <ts:origins>
        <ts:ethereum contract="ThisToken"/>
    </ts:origins>
    <ts:cards>
        <ts:card buttonClass="primary" name="mint" origins="ThisToken" type="action">
            <ts:label>
                <ts:string xml:lang="en">
                    Mint
                </ts:string>
            </ts:label>
            <ts:transaction>
                <ethereum:transaction contract="ThisToken" function="mint">
                    <ts:data/>
                </ethereum:transaction>
            </ts:transaction>
            <ts:view xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
              <p>Forge another Tolkienscript Token! Be careful as at some point, someone will have to take it to Mount Doomgox to destoy it</p>
            </ts:view>
        </ts:card>
        <ts:card buttonClass="secondary" name="Info" origins="ThisToken" type="token">
            <ts:label>
                <ts:string xml:lang="en">
                    Info
                </ts:string>
            </ts:label>
            <ts:view xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
                <p id="tokendesc">This is a Tolkienscript Token.  </p>
                <script>
                    const tokenDesc = document.getElementById("tokendesc");
                    tokenDesc.innerHTML = tokenDesc.innerHTML + " " + currentTokenInstance.name;
                </script>
            </ts:view>
        </ts:card>
        <ts:card buttonClass="primary" name="purchase" type="onboarding">
            <ts:label>
                <ts:string xml:lang="en">
                    Forge
                </ts:string>
            </ts:label>
        
            <ts:transaction>
                <ethereum:transaction contract="ThisToken" function="mint">
                    <ts:data>
                    </ts:data>
                </ethereum:transaction>
            </ts:transaction>
			<ts:view xmlns="http://www.w3.org/1999/xhtml" xml:lang="en">
				<p>This is an onboarding card for the Tolkienscript token</p>
                <br/>
                <p>Use this to forge your own tokens, at your peril! One token to rule them all</p>
            </ts:view>
            
        </ts:card>     
    </ts:cards>
    <ts:attribute name="totalSupply">
        <ts:type>
            <ts:syntax>1.3.6.1.4.1.1466.115.121.1.36</ts:syntax>
        </ts:type>
        <ts:label>
            <ts:string xml:lang="en">
                totalSupply
            </ts:string>
        </ts:label>
        <ts:origins>
            <ethereum:call as="uint" contract="ThisToken" function="totalSupply">
                <ts:data/>
            </ethereum:call>
        </ts:origins>
    </ts:attribute>
</ts:token>