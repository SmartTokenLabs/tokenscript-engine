{
	"compilerOptions": {
		"declaration": true,
		"allowSyntheticDefaultImports": true,
		"allowUnreachableCode": false,
		"rootDir": "./src/",
		"outDir": "./dist/lib.commonjs",
		"module": "commonjs",
		"target": "es2018",
		"allowJs": true,
		"sourceMap": true,
		"moduleResolution": "node",
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"lib": [
			"es2018",
			"es2017",
			"dom",
			"dom.iterable",
			"es2020.bigint",
			"es2021.string"
		],
		"noUnusedLocals": false,
		"noUnusedParameters": false,
		"skipLibCheck": true,
		"composite": true,
		"declarationMap": true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"**/node_modules"
	]
}
